<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<placeable type="bigDisplayType" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/placeable.xsd">
    <storeData>
        <name params="8">$l10n_unversalDisplay</name>
        <functions>
            <function>$l10n_function_unversalDisplay</function>
        </functions>
        <image>store/SmallDisplay.dds</image>
        <price>5000</price>
        <lifetime>1000</lifetime>
        <dailyUpkeep>5</dailyUpkeep>
        <rotation>0</rotation>
        <brand>FARMERTOOLS</brand>
        <species>placeable</species>
        <category>misc</category>
        <brush>
            <type>placeable</type>
            <category>buildings</category>
            <tab>tools</tab>
        </brush>
    </storeData>
    
    <base>
        <filename>placeable/SmallDisplay.i3d</filename>
        <canBeRenamed>true</canBeRenamed>
    </base>
    
    <bigDisplays>
        <bigDisplay upperLeftNode="displayStartPoint" height="0.81" width="1.89" size="0.11" color="0 0.9 0 1" />
    </bigDisplays>
    
    <clearAreas />
    
    <leveling requireLeveling="false" />
	
    <indoorAreas />
	
    <ai>
        <updateAreas />
    </ai>
    
    <infoTrigger triggerNode="infoTriggerNode" />
    
    <i3dMappings>
		<i3dMapping id="display" node="0>"/>
		<i3dMapping id="Case" node="0>0"/>
		<i3dMapping id="Glass" node="0>0|0"/>
		<i3dMapping id="displayStartPoint" node="0>0|1"/>
        
		<i3dMapping id="infoTriggerNode" node="1>0"/>
	</i3dMappings>
</placeable>
